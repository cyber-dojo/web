<div id="traffic-light-navigator">
  <button id="first-index" class="triangle button">
    <img src="/images/triangle_prev.gif"
         alt="move to first traffic-light"/>
  </button>
  <button id="prev-index" class="triangle button">
    <img src="/images/triangle_prev.gif"
         alt="move to previous traffic-light"/>
  </button>
  <div id="review-index-box"></div>
  <button id="next-index" class="triangle button">
    <img src="/images/triangle_next.gif"
         alt="move to next traffic-light"/>
  </button>
  <button id="last-index" class="triangle button">
    <img src="/images/triangle_next.gif"
         alt="move to last traffic-light"/>
  </button>
</div>

<script>
'use strict';
$(() => {

  const review = cd.review;

  review.refreshTrafficLightsNavigator = (events) => {
    const index = review.index;
    refreshMoveTo($('#first-index'), firstEventIndex(events, index));
    refreshMoveTo($('#prev-index'),  prevEventIndex(events, index));
    $('#review-index-box').html($makeIndexNumber(events, index));
    refreshMoveTo($('#next-index'),  nextEventIndex(events, index));
    refreshMoveTo($('#last-index'),  lastEventIndex(events, index));
  };

  // - - - - - - - - - - - - - - - - - - - - - - - -
  const refreshMoveTo = (button, index) => {
    button
      .attr('disabled', index === null)
      .off('click')
      .on('click', () => review.refresh(review.id, index));
  };

  // - - - - - - - - - - - - - - - - - - - - - - - -
  const firstEventIndex = (events, index) => {
    if (index === 0) { // 0 is creation event
      return null; // Disable
    } else {
      return 0;
    }
  };

  // - - - - - - - - - - - - - - - - - - - - - - - -
  // TODO: Need to be able to go back to [0]==creation

  const prevEventIndex = (events, index) => {
    const event = events[index];
    if (index === 0) { // creation event
      return null; // Disable
    } else if (cd.review.extraCheckBox.isChecked()) {
      return index - 1;
    } else {
      index -= 1;
      while (index > 0) {
        if (cd.lib.isLight(events[index])) {
          return index;
        } else {
          index -= 1;
        }
      }
      return null; // Disable
    }
  };

  // - - - - - - - - - - - - - - - - - - - - - - - -
  const nextEventIndex = (events, index) => {
    const event = events[index];
    if (index === events.length - 1) {
      return null; // Disable
    } else if (cd.review.extraCheckBox.isChecked()) {
      return index + 1;
    } else {
      index += 1;
      while (index < events.length - 1) {
        if (cd.lib.isLight(events[index])) {
          return index;
        } else {
          index += 1;
        }
      }
      return null; // Disable
    }
  };

  // - - - - - - - - - - - - - - - - - - - - - - - -
  const lastEventIndex = (events, index) => {
    const event = events[index];
    if (index === events.length - 1) {
      return null; // Disable
    } else if (cd.review.extraCheckBox.isChecked()) {
      return events.length - 1;
    } else {
      // TODO: return index of last light, or null
    }
  };

  // - - - - - - - - - - - - - - - - - - - - - - - -
  const $makeIndexNumber = (events, index) => {
    return $('<div>', {
      id:'index-number',
      class:events[index].colour
    }).html(index);
  };

});
</script>
