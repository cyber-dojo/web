
<script type="text/javascript"><!--

$(function() {

  const inputId = $('input#id');
  const dropDown = $('#drop-down');
  const hiText = $('#hi-text');
  const avatarStart = $('#avatar-start');
  const ok = $('button#ok');
  const cancel = $('button#cancel');

  const autoDropDown = function() {
    const id = inputId.val();
    if (id.length >= 6) {
      $.getJSON('/id_review/drop_down', { id: id }, function(dojo) {
        if (dojo.exists) {
          avatarStart.html(dojo.avatarStartHtml);
          ok.unbind().click(function() {
            const url = '/dashboard/show/' + dojo.id + '?avatar=' + dojo.avatarName;
            window.location.href = cd.homePageUrl(dojo.id);
            window.open(url);
          });
        }
        inputId.prop('disabled', true);
        inputId.slideUp('fast', function() {
          dropDown.slideDown('slow');
        });
      });
    }
  };

  dropDown.hide();

  cancel.click(function() {
    dropDown.slideUp('slow', function() {
      inputId.show()
             .prop('disabled', false)
             .val('')
             .slideDown('fast')
             .focus();
    });
  });

  cd.hexOnly(inputId);

  inputId.focus().keyup(function() { autoDropDown(); });

});

//--></script>

<input title="an id contains only the digits 0123456789 and letters ABCDEF, and is case insensitive"
       type="text"
       id="id"
       placeholder="id?"
       size="8"
       value="">
</input>

<div id="drop-down">
  <div id="hi-text"></div>
  <div id="avatar-start"></div>
  <button id="ok">ok</button>
  <button id="cancel">cancel</button>
</div>
