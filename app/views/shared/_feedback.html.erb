<script>
'use strict';
$(() => {

  const $button = $('#feedback-button');
  cd.createTip($button, 'give us your feedback');
  $button.click(() => openFeedbackInfoDialog());

  const openFeedbackInfoDialog = () => {
    $('#feedback-dialog').dialog({
              width: 430,
           autoOpen: true,
      closeOnEscape: true,
              modal: true,
              title: cd.dialogTitle('feedback'),
        beforeClose: () => cd.kata.editor.refocus()
    });
  };

});
</script>
