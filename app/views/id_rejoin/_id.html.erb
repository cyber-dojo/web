<script type="text/javascript"><!--
'use strict';

$(() => {

  const inputId = $('input#id');
  const dropDown = $('#drop-down');
  const cancel = $('button#cancel');

  const autoDropDown = () => {
    const id = inputId.val();
    if (id.length >= 6) {
      $.getJSON('/id_rejoin/drop_down', { id: id }, (dojo) => {
        if (dojo.exists) {
          const hiText = $('#hi-text');
          const avatarPicker = $('#avatar-picker');
          const loText = $('#lo-text');
          if (dojo.empty) {
            hiText.html('no one has joined yet!');
            loText.html('');
          } else {
            hiText.html('click your animal');
            loText.html('or');
          }
          avatarPicker.html(dojo.avatarPickerHtml);
          cd.setupHoverTips($('[data-tip]'));
          inputId.prop('disabled', true);
          inputId.slideUp('fast', () => {
            dropDown.slideDown('slow');
          });
        }
      });
    }
  };

  dropDown.hide();

  cancel.click(() => {
    dropDown.slideUp('slow', () => {
      inputId.show()
             .prop('disabled', false)
             .val('')
             .slideDown('fast')
             .focus();
    });
  });

  cd.onlyBase58(inputId);

  inputId.focus().keyup(() => { autoDropDown(); });

});

//--></script>

<input type="text"
       id="id"
       placeholder="id?"
       size="8"
       value="">
</input>

<div id="drop-down">
  <span id="hi-text"></span>
  <div id="avatar-picker"></div>
  <span id="lo-text"></span>
  <button id="cancel">cancel</button>
</div>
