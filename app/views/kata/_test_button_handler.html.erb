<script type="text/javascript"><!--
'use strict';
$(() => {
  // Called from 3 places
  // 1. when you click [test]
  // 2. when you hot-key Alt-T
  // 3. when you revert from a diff-dialog
  cd.testButton.click(() => {
    cd.saveCodeFromSyntaxHighlightEditors();
    cd.storeOutgoingFileHashes();
    const form = cd.testButton.closest('form');
    $.ajax({
         timeout: 30000, // 30 seconds
            type: 'POST',
             url: form.attr('action'),
            data: form.serialize(),
      beforeSend: beforeSend,
        complete: complete,
           error: error
    });
  });

  //- - - - - - - - - - - - - - - - - - - - - - -

  const testOverlay = $('<div id="test-overlay"></div>');

  const beforeSend = (_xhr, _settings) => {
    cd.testButton.disable();
    testOverlay.insertAfter($('body'));
    cd.testSpinner.show();
  };

  const complete = (_xhr, _status) => {
    cd.testSpinner.hide();
    testOverlay.remove();
    cd.testButton.enable();
  };

  //- - - - - - - - - - - - - - - - - - - - - - -

  const error = (request, status, thrown) => {
    let info = `${thrown}\n`;
    info += `Status=${status}\n`;
    if (status == 'timeout') {
      info += `Have you lost your network connection?\n\n`;
    }
    if (status == 'error') {
      info += `Is the cyber-dojo server down?\n\n`;
    }
    info += request.responseText;
    // TODO: info might not work in a textarea...
    const html =
      '<div data-width="620">' +
      `<textarea id="error" readonly="readonly">${info}</textarea>` +
      '</div>';
    cd.dialog(html, 'error', 'close').dialog('open');
  };
});
//--></script>
