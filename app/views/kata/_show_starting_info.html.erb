<script>
'use strict';
$(() => {

  cd.showStartingInfoDialog = () => {
    if (cd.kata.index === 1 && !turnItOff()) {
      cd.trafficLightsButton().click();
    }
  };

  const turnItOff = () => {
    let value = 'on'; // source-level default
    value = override(value, cd.kata.manifest().starting_info_dialog);
    value = override(value, cd.env.STARTING_INFO_DIALOG);
    return value === 'off';
  };

  const override = (current, value) => {
    return (value === "" || value === undefined) ? current : value;
  };

});
</script>
